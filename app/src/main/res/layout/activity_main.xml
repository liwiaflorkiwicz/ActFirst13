<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#90CAF9"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/helpButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#DB2F56"
            android:text="HELP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="38dp"
            android:text="User name"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/scene4Button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#90CAF9"
            android:contentDescription="Go to scene 1"
            android:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/historyButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scene3Button"
            app:layout_constraintTop_toBottomOf="@+id/scene2Button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/cough_small" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/Scene3Name"
            app:layout_constraintEnd_toEndOf="@+id/scene3Button"
            app:layout_constraintStart_toStartOf="@+id/scene3Button"
            app:layout_constraintTop_toBottomOf="@+id/scene3Button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/Scene1Name"
            app:layout_constraintEnd_toEndOf="@+id/scene1Button"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="@+id/scene1Button"
            app:layout_constraintTop_toBottomOf="@+id/scene1Button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/Scene2Name"
            app:layout_constraintEnd_toEndOf="@+id/scene2Button"
            app:layout_constraintStart_toStartOf="@+id/scene2Button"
            app:layout_constraintTop_toBottomOf="@+id/scene2Button" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ActFirst"
            android:textSize="96sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="86dp"
            android:text="Scene4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scene4Button" />

        <ImageButton
            android:id="@+id/scene2Button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginEnd="44dp"
            android:backgroundTint="#9FA8DA"
            android:contentDescription="Go to scene 2"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scene1Button"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/leg_small" />

        <ImageButton
            android:id="@+id/scene3Button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#90CAF9"
            android:contentDescription="Go to scene 3"
            app:layout_constraintBottom_toTopOf="@+id/historyButton"
            app:layout_constraintEnd_toStartOf="@+id/scene4Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scene4Button"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/cold_small" />

        <ImageButton
            android:id="@+id/scene1Button"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#9FA8DA"
            android:contentDescription="Go to scene 1"
            android:tint="#F06292"
            app:layout_constraintBottom_toTopOf="@+id/scene3Button"
            app:layout_constraintEnd_toStartOf="@+id/scene2Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.051"
            app:srcCompat="@drawable/cpr_small" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#928DE8"
            android:text="HISTORY"
            app:layout_constraintBottom_toTopOf="@+id/helpButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>